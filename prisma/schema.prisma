generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model User {
  id     String @id @default(uuid()) // Maps to Supabase Auth ID
  email  String @unique
  roleId Int
  role   Role   @relation(fields: [roleId], references: [id])

  student Student?
  teacher Teacher?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  nis         String?  @unique // Student ID (e.g., 2026001) - Nullable during migration
  fullName    String
  dateOfBirth DateTime
  parentName  String
  address     String
  phoneNumber String

  scores Score[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Teacher {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name String

  scoresGiven Score[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Score {
  id String @id @default(uuid())

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  teacherId String?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])

  reading      Int @default(0)
  memorization Int @default(0)
  discipline   Int @default(0)
  attendance   Int @default(0)
  behavior     Int @default(0)

  finalScore Float @default(0.0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
